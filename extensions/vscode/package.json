{
  "name": "nexy",
  "displayName": "nexy",
  "description": "Syntax highlighting and basic language configuration for Nexy (.nexy) files",
  "version": "0.0.1",
  "engines": { "vscode": "^1.109.0" },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:nexy",
    "onLanguage:mdx"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "nexy",
        "aliases": ["Nexy", "nexy"],
        "extensions": [".nexy"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mdx",
        "aliases": ["MDX", "mdx"],
        "extensions": [".mdx"],
        "configuration": "./language-configuration.json"
      }
    ],
    "iconThemes": [
      {
        "id": "nexy-icons",
        "label": "Nexy Icons",
        "path": "./fileicons/nexy-icon-theme.json"
      }
    ],
    "grammars": [
      {
        "language": "nexy",
        "scopeName": "source.nexy",
        "path": "./syntaxes/nexy.tmLanguage.json"
      },
      {
        "language": "mdx",
        "scopeName": "source.mdx",
        "path": "./syntaxes/mdx.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "nexy",
        "path": "./nexy.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "nexy.createComponent",
        "title": "Nexy: Create component",
        "category": "Nexy"
      },
      {
        "command": "nexy.insertHeader",
        "title": "Nexy: Insert header",
        "category": "Nexy"
      },
      {
        "command": "nexy.wrapWithComponent",
        "title": "Nexy: Wrap with component",
        "category": "Nexy"
      },
      {
        "command": "nexy.openDocs",
        "title": "Nexy: Open documentation",
        "category": "Nexy"
      },
      {
        "command": "nexy.restartLSP",
        "title": "Nexy: Restart language server",
        "category": "Nexy"
      }
    ],
    "configuration": {
      "title": "Nexy",
      "properties": {
        "nexy.decorations.enableFrameworkColors": {
          "type": "boolean",
          "default": true,
          "description": "Color Nexy components based on their framework (Vue, Nexy, React, Svelte)."
        },
        "nexy.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show Nexy summary (section, props, imports) in status bar."
        }
      }
    },
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": [
              "punctuation.definition.header.begin.nexy",
              "punctuation.definition.header.end.nexy"
            ],
            "settings": {
              "foreground": "#444444",
              "fontStyle": "italic"
            }
          },
          {
            "scope": [
              "storage.type.nexy"
            ],
            "settings": {
              "foreground": "#ffa500"
            }
          },
          {
            "scope": [
              "variable.other.readwrite.python.nexy",
              "variable.other.readwrite.nexy"
            ],
            "settings": {
              "foreground": "#E5C07B"
            }
          },
          {
            "scope": [
              "support.type.nexy"
            ],
            "settings": {
              "foreground": "#56B6C2"
            }
          },
          {
            "scope": [
              "keyword.operator.assignment.python.nexy"
            ],
            "settings": {
              "foreground": "#D19A66"
            }
          },
          {
            "scope": [
              "entity.name.namespace.python.nexy",
              "entity.name.imported.python.nexy",
              "variable.other.readwrite.python.nexy"
            ],
            "settings": {
              "foreground": "#4FC1FF"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-html-languageservice": "^5.3.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
